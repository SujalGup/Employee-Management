@page
@model Task1.Pages.EmployeeNTier.AddModel
@{
}
<div class="d-flex justify-content-between align-items-center mb-3 wtxt">
    <h1>Add Employees</h1>
    <a href="/EmployeeNTier/List" class="btn btn-primary"><i class="bi bi-database"></i> Database</a>
</div>

@{
    Html.RenderPartialAsync("_Message");
}

<div style="display: flex; justify-content: center; align-items: flex-start; height: 100vh;">
    <form method="post" style="width:50%; border: 1px solid black; padding: 20px; background-color:ghostwhite; border-radius: 10px;">
    <div class="form-group row">
        <label for="Name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            @*<input type="text" class="form-control" name="Name" placeholder="Name" asp-for="Name">
            <span asp-validation-for="Name"></span>*@

            @Html.TextBoxFor(s => s.Name, new { placeholder = "Name", @class = "form-control" })
            @Html.ValidationMessageFor(s => s.Name)
        </div>
    </div>
    <div class="form-group row">
        <label for="Email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            @*<input type="text" class="form-control" name="Email" placeholder="Email" asp-for="Email">
            <span asp-validation-for="Email"></span>*@

            @Html.TextBoxFor(s => s.Email, new { placeholder = "Email", @class = "form-control" })
            @Html.ValidationMessageFor(s => s.Email)

        </div>
    </div>
    <div class="form-group row">
        <label for="Phone" class="col-sm-2 col-form-label">Phone</label>
        <div class="col-sm-10">
            @*<input type="text" class="form-control" name="Phone" placeholder="Phone" asp-for="Phone">*@

            @Html.TextBoxFor(s => s.Phone, new { placeholder = "Phone", @class = "form-control" })
            @Html.ValidationMessageFor(s => s.Phone)
        </div>
    </div>
    <div class="form-group row">
        <label for="Depatment" class="col-sm-2 col-form-label">Department</label>
        <div class="col-sm-10">
            @*<input type="text" class="form-control" name="Phone" placeholder="Phone" asp-for="Phone">*@

            @Html.DropDownListFor(s => s.Department, new SelectList(Model.DepartmentList), "Select Department", new { @class = "form-control" })
            @Html.ValidationMessageFor(s => s.Department)
        </div>
    </div>

    <div class="form-group row">
        <label for="Status" class="col-sm-2 col-form-label">Status</label>
        <div class="col-sm-10">
            @*<input type="text" class="form-control" name="Phone" placeholder="Phone" asp-for="Phone">*@

            @Html.DropDownListFor(s => s.Status, new SelectList(Model.StatusList),"Select Status", new {@class = "form-control"})
            @Html.ValidationMessageFor(s => s.Status)
        </div>
    </div>
    
    <br />
    <div class="d-flex justify-content-center">

        <button type="submit" class="btn btn-primary" onclick="SubmitForm();">Submit</button>
    </div>
</form>
</div>
@section scripts {
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="~/js/jquery.blockui.js"></script>

    <script type="text/javascript">
        function SubmitForm() {
            $.blockUI();
        
        }
        </script>
    <style>

        .wtxt {
            color: white;
        }
    </style>
}