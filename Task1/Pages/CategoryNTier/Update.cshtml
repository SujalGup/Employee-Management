@page
@model Task1.Pages.CategoryNTier.UpdateModel
@{
}
<h1 style="text-align:center; color:white;">Update Expense Category</h1>
<div style="display: flex; justify-content: center; align-items: flex-start; height: 100vh;">
    <form method="post" style="width:50%; border: 1px solid black; padding: 30px; background-color:ghostwhite; border-radius: 10px;">
    <div class="form-group row">

        @Html.HiddenFor(x => x.Id)

        <label for="Name" class="col-sm-2 col-form-label mar" >Name</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(s => s.Name, new { placeholder = "Name", @class = "form-control" })
            @Html.ValidationMessageFor(s => s.Name)
        </div>
    </div>

        <div class="form-group row">
            <label for="Description" class="col-sm-2 col-form-label mar">Description</label>
            <div class="col-sm-10">

                @Html.TextAreaFor(s => s.Description, new { placeholder = "Description", @class = "form-control" })
                @Html.ValidationMessageFor(s => s.Description)

            </div>
        </div>
        <div class="form-group row">
            <label for="Mandatory" class="col-sm-2 col-form-label mar">Mandatory</label>
            <div class="col-sm-10">

                @Html.DropDownListFor(s => s.Mandatory, new SelectList(Model.MandatoryList), "Select Mandatory", new { @class = "form-control" })
                @Html.ValidationMessageFor(s => s.Mandatory)
            </div>
        </div>
        <br />
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary" onclick="SubmitForm();">Submit</button>
        </div>
    </form>
</div>

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <style>
        .mar {
            margin-bottom: 20px;
        }
    </style>

}