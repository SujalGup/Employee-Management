@page
@model Task1.Pages.CategoryNTier.AddModel
@{
}

<div class="d-flex justify-content-between align-items-center mb-3 wtxt">
    <h1>Add Expense Category</h1>
    <a href="/CategoryNTier/List" class="btn btn-primary"><i class="bi bi-database"></i> Database</a>
</div>
@{
    Html.RenderPartialAsync("_Message");
}

<div style="display: flex; justify-content: center; align-items: flex-start; height: 100vh;">
    <form method="post" style="width:50%; border: 1px solid black; padding: 20px; background-color:ghostwhite; border-radius: 10px;">
    <div class="form-group row">
        <label for="Name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">

            @Html.TextBoxFor(s => s.Name, new { placeholder = "Name", @class = "form-control" })
            @Html.ValidationMessageFor(s => s.Name)
        </div>
    </div>
        <div class="form-group row">
            <label for="Description" class="col-sm-2 col-form-label">Description</label>
            <div class="col-sm-10">

                @Html.TextAreaFor(s => s.Description, new { placeholder = "Description", @class = "form-control" })
                @Html.ValidationMessageFor(s => s.Description)

            </div>
        </div>
        <div class="form-group row">
            <label for="Mandatory" class="col-sm-2 col-form-label">Mandatory</label>
            <div class="col-sm-10">

                @Html.DropDownListFor(s => s.Mandatory, new SelectList(Model.MandatoryList), "Select Mandatory", new { @class = "form-control" })
                @Html.ValidationMessageFor(s => s.Mandatory)
            </div>
        </div>
        <br />
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary" onclick="SubmitForm();">Submit</button>
        </div>
    </form>
</div>

@section scripts {
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="~/js/jquery.blockui.js"></script>

    <script type="text/javascript">
        function SubmitForm() {
            $.blockUI();

        }
    </script>
    <style>
        .wtxt {
            color: white;
        }
    </style>
}