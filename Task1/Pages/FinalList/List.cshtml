@page
@using Task1.AppCode
@model Task1.Pages.FinalList.ListModel
@{
}

<h1 style="text-align:center; color: white; ">
    Employee Data
</h1>


<table class="table table-striped tab" style="border: 2px solid black;">
    <thead>

    <th scope="col">Employee's Name</th>
    <th scope="col">Email</th>
    <th scope="col">Phone</th>
    <th scope="col">Departent's Name</th>
    <th scope="col">Departent's Description</th>
    <th scope="col">Status</th>
    <th scope="col">Created By</th>
    <th scope="col">Updated By</th>
    </thead>
    <tbody>
        @foreach (var item in Model.EmployeeList)
        {
            <tr>
                <td> @item.Name</td>

                <td> @item.Email</td>

                <td> @item.Phone</td>

                <td> @item.Department</td>
               
                <td> @item.Description</td>



                <td>
                    @Html.DisplayEmployeeStatus(item.Status)
                </td>

                <td>
                    @item.CreatedBy
                    <br />
                    @Html.DisplayDate(@item.CreatedOnUTC)
                </td>

                <td>
                    @item.UpdatedBy
                    <br />
                    @Html.DisplayDate(@item.UpdatedOnUTC)
                </td>

               
            </tr>

        }
    </tbody>

</table>


@section scripts {
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.blockui.js"></script>
    </script>
    <style>

        .tab {
            background-color: white;
        }


    </style>


}
